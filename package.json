{
  "name": "todo-list-server",
  "version": "0.0.1",
  "description": "A simple TODO list server built with nest.js",
  "author": "Vicky Gonsalves",
  "private": false,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run start:dev",
    "start:dev": "npm run typeorm:migration:run && nodemon --config nodemon.json",
    "start:debug": "npm run typeorm:migration:run && nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production npm run typeorm:migration:run && cross-env NODE_ENV=production ts-node -r tsconfig-paths/register dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": " cross-env NODE_ENV=test npm run typeorm:migration:run && cross-env NODE_ENV=test jest -i --forceExit",
    "test:watch": "cross-env NODE_ENV=test npm run typeorm:migration:run && cross-env NODE_ENV=test jest -i --watch",
    "test:cov": "cross-env NODE_ENV=test npm run typeorm:migration:run && cross-env NODE_ENV=test jest -i --coverage --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test npm run typeorm:migration:run && cross-env NODE_ENV=test jest -i --config ./test/jest-e2e.json",
    "pretypeorm": "(rimraf ormconfig.json || :) && ts-node -r tsconfig-paths/register src/scripts/orm-config-generator.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate -n",
    "typeorm:migration:run": "npm run typeorm -- migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.6.1",
    "@nestjs/typeorm": "^7.1.4",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "nestjs-typeorm-paginate": "^2.2.1",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.15",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "eslint": "7.12.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "faker": "^5.1.0",
    "jest": "26.6.2",
    "nodemon": "^2.0.6",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "26.4.3",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  }
}
